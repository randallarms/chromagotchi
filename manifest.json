{
  "manifest_version": 2,

  "name": "Chromagotchi",
  "description": "Take care of your digital pet and watch it grow!",
  "version": "0.1",
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab",
   "storage"
   ]
}